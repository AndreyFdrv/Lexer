%{
#include<stdio.h>
#include<string.h>
int colno=1;
%}

%%
[s][k][i][p] {printf("KW_Skip(%d, %d, %d); ", yylineno, colno, colno+yyleng);
colno=colno+yyleng;}
[:][=] {printf("Assignment; ");}
[\;] {printf("Colon; ");}
[w][r][i][t][e] {printf("KW_Write; ");}
[r][e][a][d] {printf("KW_Read; ");}
[w][h][i][l][e] {printf("KW_While; ");}
[d][o] {printf("KW_Do; ");}
[i][f] {printf("KW_If; ");}
[t][h][e][n] {printf("KW_Then; ");}
[e][l][s][e] {printf("KW_Else; ");}
[a-zA-Z_][a-zA-Z_0-9]* {yytext [yyleng] = (char) 0;
printf("Var(\"%s\"); ", yytext);}
([+|\-|*|/|%|>|<])|([=|\!][=])|([>|<][=])|([&][&])|([\|][\|]) {yytext [yyleng] = (char) 0; 
printf("Op(\"%s\"; ", yytext);}
[1-9][0-9]* {yytext [yyleng] = (char) 0;
printf("Num(\"%s\"); ", yytext);}
([\(])|([\)]) {yytext [yyleng] = (char) 0;
printf("Parenthesis(\"%s\"); ", yytext);}
%%

main(int argc,char *argv[])
{

yyin=fopen(argv[1],"r");

yylex();

}

