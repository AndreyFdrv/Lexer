%{
#include<stdio.h>
#include<string.h>
char output[1000]="\0";
%}

%%
[s][k][i][p] {strcat(output, "KW_Skip; ");}
[:][=] {strcat(output, "Assignment; ");}
[\;] {strcat(output, "Colon; ");}
[w][r][i][t][e] {strcat(output, "KW_Skip; ");}
[r][e][a][d] {strcat(output, "KW_Read; ");}
[w][h][i][l][e] {strcat(output, "KW_While; ");}
[d][o] {strcat(output, "KW_Do; ");}
[i][f] {strcat(output, "KW_If; ");}
[t][h][e][n] {strcat(output, "KW_Then; ");}
[e][l][s][e] {strcat(output, "KW_Else; ");}
[a-zA-Z_][a-zA-Z_0-9]* {strcat(output, "Var; ");}
([+|\-|*|/|%|>|<])|([=|\!][=])|([>|<][=])|([&][&])|([\|][\|]) {strcat(output, "Op; ");}
[1-9][0-9]* {strcat(output, "Num; ");}
([\(])|([\)]) {strcat(output, "Parenthesis; ");}
%%

main(int argc,char *argv[])
{

yyin=fopen(argv[1],"r");

yylex();

printf("%s\n",output);
}

